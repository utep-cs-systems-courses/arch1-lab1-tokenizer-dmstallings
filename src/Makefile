# compiler flags -g debug -O3 optimization
CFLAGS=-g -O3

# all required object files
OBJS = tokenizer.o history.o uimain.o

# first target is built by default
all: tokenizer

# include file dependencies
tokenizer.o: tokenizer.h tokenizer.c
history.o: history.h history.c
uimain.o: tokenizer.h history.h

# $@=target, $^=prerequisites
tokenizer: tokenizer.o history.o uimain.o
	cc -o $@ $^ $(CFLAGS)

# deletes files generated by compilation
clean:
	rm -f *o tokenizer

# executes the tokenizer target that was built previously
run: tokenizer
	./tokenizer

